<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/booking_list_item_HotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/booking_list_item_RestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/booking_list_item_HotelName"
                android:layout_below="@+id/booking_list_item_HotelName"
                android:layout_marginTop="34dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/booking_list_item_ActivityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/booking_list_item_RestaurantName"
                android:layout_below="@+id/booking_list_item_RestaurantName"
                android:layout_marginTop="31dp"
                android:text="TextView"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ratingBar2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="23dp"
                android:text="More Info"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

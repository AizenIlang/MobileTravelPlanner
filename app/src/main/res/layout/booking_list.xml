<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <TextView
                android:id="@+id/booking_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/booking_item_hotel_name"
                android:layout_alignBottom="@+id/booking_item_hotel_name"
                android:layout_alignEnd="@+id/booking_recycler_adapter"
                android:text="TextView"
                android:textAlignment="viewEnd"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/booking_item_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/booking_item_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/booking_item_hotel_name"
                android:layout_margin="10dp"
                android:text="TextView"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/booking_recycler_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView18"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/booking_item_total"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ratingBar2"
                android:layout_centerHorizontal="true"
                android:text="More Info"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/booking_item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView18"
                android:layout_marginBottom="12dp"
                android:text="TextView"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/booking_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/booking_recycler_adapter"
                android:layout_alignTop="@+id/booking_item_room"
                android:text="0.0" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

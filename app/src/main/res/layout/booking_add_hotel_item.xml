<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="163dp">

            <ImageView
                android:id="@+id/booking_add_hotel_imageview"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:transitionName="hotelImage" />

            <RatingBar
                android:id="@+id/booking_add_hotel_rating"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booking_add_hotel_name"
                android:layout_marginStart="11dp"
                android:isIndicator="true"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/booking_add_hotel_imageview" />

            <TextView
                android:id="@+id/booking_add_hotel_name"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/booking_add_hotel_imageview"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/booking_add_hotel_company"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/booking_add_hotel_overflow"
                android:layout_toEndOf="@+id/booking_add_hotel_imageview"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/booking_add_hotel_overflow"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/booking_add_hotel_imageview"
                android:layout_alignEnd="@+id/booking_add_hotel_name"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="424dp"
        android:layout_height="154dp"
        android:background="@drawable/activitiessample"
        android:scaleType="matrix"
        tools:layout_editor_absoluteX="-18dp"
        tools:layout_editor_absoluteY="-2dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="340dp"
        android:layout_height="41dp"
        android:fontFamily="cursive"
        android:text="Hacking Mt. Peligro"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="36sp"

        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="189dp" />

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="243dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam elit augue, tempor at varius id, porta ut magna. Nulla at viverra purus. Donec leo risus, efficitur et metus vel, iaculis faucibus mauris. Pellentesque quis mauris ligula."
            android:textAlignment="textStart" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="364dp"
        android:layout_height="99dp"
        android:background="@drawable/google_maps_hello_world"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Price :"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="359dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500 PHP"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="359dp" />

</android.support.constraint.ConstraintLayout>

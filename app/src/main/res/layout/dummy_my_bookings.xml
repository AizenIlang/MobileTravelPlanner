<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danzee.travelplanner.Admin.AdminHotel">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="188dp"
        android:layout_height="146dp"
        android:background="@drawable/hotelsample"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-8dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="219dp"
        android:layout_height="168dp"
        android:background="@drawable/activitiessample"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="-23dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Travel Ko sa Coron"
        android:textColor="@color/font_color_white"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="32dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="441dp"
        android:layout_height="124dp"
        android:background="@drawable/restaurant2sample"
        tools:layout_editor_absoluteX="-32dp"
        tools:layout_editor_absoluteY="80dp" />

    <RelativeLayout
        android:layout_width="349dp"
        android:layout_height="278dp"
        android:background="@drawable/box_fragment_darker_thin"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="217dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="22dp"
            android:text="Donna Restaurant"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button10"
            android:layout_alignBottom="@+id/button10"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="Prices" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="Maps" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button9"
            android:layout_alignBottom="@+id/button9"
            android:layout_alignEnd="@+id/textView13"
            android:text="Cost" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="28dp"
            android:text="The Hotel 21"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="15dp"
            android:text="Galante Room"
            android:textColor="@color/font_color_light_gray" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="17dp"
            android:text="Hacking Mt. Peligro"
            android:textColor="?android:attr/colorMultiSelectHighlight"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

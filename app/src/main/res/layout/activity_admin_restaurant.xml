<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_restaurant_parentview"
    tools:context="com.example.danzee.travelplanner.Admin.AdminHotel">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Admin Restaurant"
        android:textAlignment="center"
        android:transitionName="admin_headerTitle"
        app:layout_constraintBottom_toTopOf="@+id/admin_hotels_imageContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/admin_restaurant_name"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:inputType="text"
        android:hint="Name"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restuarant_company"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/admin_restuarant_company"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="Company"
        android:inputType="textPersonName"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restaurant_details"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/admin_restaurant_details"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:inputType="textPersonName"
        android:hint="Details"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restaurant_price"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/admin_restaurant_price"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="Average Price"
        android:inputType="number"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restaurant_location1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/admin_restaurant_imageContainer"
        android:layout_width="163dp"
        android:layout_height="123dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restaurant_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ProgressBar
            android:id="@+id/admin_restaurant_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:elevation="30dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/admin_restaurant_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/backgroundDark"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="157dp" />

        <!--<TextView-->
            <!--android:layout_width="122dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="CLICK HERE TO UPLOAD IMAGE"-->
            <!--android:textAlignment="center"-->
            <!--android:textColor="@color/font_color_light_gray" />-->

    </FrameLayout>

    <Button
        android:id="@+id/admin_restaurant_add_btn"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:text="ADD RECORD"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/admin_restaurant_spinner"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:entries="@array/group"
        android:spinnerMode="dialog"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restaurant_add_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/admin_restaurant_location1"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:hint="Map Coordinates"
        android:inputType="textPersonName"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restaurant_location2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/admin_restaurant_location2"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Location2"
        android:inputType="textPersonName"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_restaurant_spinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
